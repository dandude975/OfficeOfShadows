<Window x:Class="OOS.Terminal.CommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console" Height="480" Width="800"
        Background="#FF0E0E0F" Foreground="#FFDCDCDC"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="36" />
        </Grid.RowDefinitions>

        <!-- Output area -->
        <ScrollViewer x:Name="OutputScroll" Grid.Row="0" VerticalScrollBarVisibility="Auto" Background="#FF0E0E0F">
            <TextBlock x:Name="OutputText"
                       FontFamily="Consolas"
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </ScrollViewer>

        <!-- Input area -->
        <DockPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="> " FontFamily="Consolas" FontSize="14" VerticalAlignment="Center" Margin="4,0"/>
            <TextBox x:Name="InputBox"
                     FontFamily="Consolas"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     KeyDown="InputBox_KeyDown"
                     Margin="4,0"
                     AcceptsReturn="False"/>
        </DockPanel>
    </Grid>
</Window>
