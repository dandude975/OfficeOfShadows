<Window x:Class="OOS.Terminal.CommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C:\Windows\System32\cmd.exe"
        Width="1000" Height="620"
        Background="#000000"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Icon="/OOS.Terminal;component/Resources/cmd.ico"  <!-- optional if you add an .ico -->
    FontFamily="Lucida Console"
        FontSize="14">

    <Grid Background="#000000">
        <!-- Wrap whole terminal in a border to match CMD padding -->
        <Border Padding="8" Background="#000000">
            <ScrollViewer x:Name="Scroller"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="#000000">
                <TextBox x:Name="Screen"
                         Background="#000000"
                         Foreground="#C0C0C0"
                         CaretBrush="#C0C0C0"
                         BorderThickness="0"
                         AcceptsReturn="True"
                         AcceptsTab="False"
                         SpellCheck.IsEnabled="False"
                         IsUndoEnabled="False"
                         FontFamily="Lucida Console, Consolas, Courier New"
                         FontSize="14"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Hidden"
                         HorizontalScrollBarVisibility="Hidden"
                         PreviewKeyDown="Screen_PreviewKeyDown"
                         TextChanged="Screen_TextChanged"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
