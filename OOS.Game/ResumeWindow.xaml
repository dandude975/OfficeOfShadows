<Window x:Class="OOS.Game.ResumeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OFFICE OF SHADOWS" Width="860" Height="540"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#131518">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Resume Game" Foreground="#CFE3D4" FontSize="32" FontWeight="Bold"/>

        <StackPanel Grid.Row="1" Margin="0,24,0,0" VerticalAlignment="Top" >
            <TextBlock x:Name="lblSaveInfo" Foreground="#9aa3ab" FontSize="16" />
            <StackPanel Orientation="Horizontal" Margin="0,24,0,0" HorizontalAlignment="Center" >
                <Button x:Name="ContinueButton" Width="200" Height="44" Margin="8" Content="CONTINUE"
                        Click="ContinueButton_Click"/>
                <Button x:Name="NewGameButton" Width="200" Height="44" Margin="8" Content="NEW GAME"
                        Click="NewGameButton_Click"/>
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="2" HorizontalAlignment="Center" Margin="0,18,0,0"
                   Foreground="#666" Text="RETIS Software (c) 2025 — Pre-Release 1.1.7" />
    </Grid>
</Window>
