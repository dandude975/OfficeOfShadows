<Window x:Class="OOS.Game.ResumeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resume Game"
        Height="300"
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#FF101010">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Office of Shadows"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,10">

            <TextBlock x:Name="lblSaveInfo"
                       Text="Loading save info..."
                       FontSize="16"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Continue"
                        Width="120"
                        Height="40"
                        Click="ContinueButton_Click"
                        Background="#FF303030"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="10,0,10,0"/>

                <Button Content="New Game"
                        Width="120"
                        Height="40"
                        Click="NewGameButton_Click"
                        Background="#FF505050"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="10,0,10,0"/>
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Text="© 2025 OOS Interactive"
                   Foreground="Gray"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
