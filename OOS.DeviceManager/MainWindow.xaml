<Window x:Class="OOS.DeviceManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Device Manager" Width="900" Height="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="8">
            <TextBlock Text="Devices" FontWeight="Bold" Margin="4"/>
            <ListView x:Name="DeviceList" SelectionChanged="DeviceList_SelectionChanged" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="4">
                            <Ellipse Width="10" Height="10" Fill="{Binding IsFake, Converter={StaticResource BoolToBrushConverter}}" Margin="0,4,8,0"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Type}" FontSize="11" Foreground="Gray"/>
                                <TextBlock Text="{Binding Ip}" FontSize="11" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="4">
                <Button Content="Refresh" Click="Refresh_Click" Margin="4"/>
                <Button Content="Probe LAN (slow)" Click="ProbeLan_Click" Margin="4"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Column="1" Margin="8" BorderBrush="LightGray" BorderThickness="1" Padding="8">
            <StackPanel>
                <TextBlock x:Name="DetailsTitle" Text="Select a device" FontWeight="Bold" FontSize="16"/>
                <TextBlock x:Name="Details" TextWrapping="Wrap" Margin="0,8,0,0"/>
                <Separator Margin="0,12,0,12"/>
                <TextBlock Text="Actions" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Button x:Name="SimDisconnectBtn" Content="Simulate Disconnect" Click="SimDisconnectBtn_Click" Margin="4"/>
                    <Button x:Name="MarkSuspiciousBtn" Content="Mark Suspicious" Click="MarkSuspiciousBtn_Click" Margin="4"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
